<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/poster_image_view"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_weight="2"
        android:contentDescription="@string/poster_big_image_view_description"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/sampleimage" />

    <TextView
        android:id="@+id/poster_title_view"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/poster_image_view"
        app:layout_constraintStart_toStartOf="@id/poster_image_view"
        app:layout_constraintTop_toBottomOf="@id/poster_image_view"
        tools:text="Star Wars: Episode IX - The Rise of Skywalker" />
</androidx.constraintlayout.widget.ConstraintLayout>